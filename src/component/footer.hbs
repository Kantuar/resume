{{#with footer}}
<footer>
    <hr class="my-3">
    <div>
        {{#with social}}
        {{> link text=email.text href=email.href black=true }}
        {{> link text=phone.text href=phone.href black=true }}
        {{> link text=linkedin.text href=linkedin.href black=true noLine=true }}
        {{/with}}
    </div>
    <div class="my-3">
        <em>Copyright {{../header.name.firstname}} {{../header.name.lastname}}</em>
    </div>
    <div>
        <address>{{../header.address}}</address>
    </div>
</footer>
{{/with}}