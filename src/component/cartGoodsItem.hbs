<div class="col-12">
    {{#each goodsBlock}}
    <div class="card my-4">
        <div class="card-body pb-0">
            <div class="row">
                <div class="col-2 py-4 ">
                    <img class="card-img-top" src="{{image}}">
                </div>
                <div class="col-4 px-0 pt-3">
                    <h6 class="card-title">{{name}}</h6>
                    <p>{{description}}</p>
                </div>
                <div class="col-2 ps-2 pe-0 pt-5">
                    {{#with price}}
                    <div>{{title}}:</div>
                    <div><strong>{{value}}</strong></div>
                    {{/with}}
                </div>
                <div class="col-2 px-0 pt-5">
                    {{amount}}
                </div>
                <div class="col-2 px-0 pt-3">
                    {{#each buttons}}
                    <button class="btn m-2 mx-0
                            {{#if isPrimary}}  btn-primary  {{/if}}
                            {{#if isDanger}}  btn-outline-danger {{/if}}">{{text}}
                    </button>
                    {{/each}}
                </div>
            </div>
        </div>
    </div>
    {{/each}}
</div>