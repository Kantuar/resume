<div>
    {{> title data='Характеристика екскурсії' big=true}}
    <hr>
    <h2>{{program.excursion.name}}</h2>
    <p>{{program.excursion.location.city}}, {{program.excursion.location.country}}</p>
    <p>Date: {{program.excursion.date}}</p>

    {{#each program.excursion.program}}
    <h3>{{name}}</h3>
    <p>Type: {{type}}</p>
    <p>Duration: {{duration}} hours</p>

    <h4>Details</h4>

    {{#if details.museum}}
    <h5>Museum</h5>
    <p>Name: {{details.museum.name}}</p>
    <p>Location: {{details.museum.location.address}}, {{details.museum.location.city}},
        {{details.museum.location.country}}
    </p>

    <h6>Exhibits</h6>
    <ul>
        {{#each details.museum.exhibits}}
        <li>
            <strong>{{name}}</strong>
            {{#if artist}}
            <p>Artist: {{artist}}</p>
            {{/if}}
            <p>Description: {{description}}</p>
            <p>Audio Guide: {{audio_guide}}</p>
        </li>
        {{/each}}
    </ul>
    {{/if}}

    {{#if details.venue}}
    <h5>Venue</h5>
    <p>Name: {{details.venue.name}}</p>
    <p>Location: {{details.venue.location.address}}, {{details.venue.location.city}}, {{details.venue.location.country}}
    </p>

    <h6>Performers</h6>
    <ul>
        {{#each details.performers}}
        <li>
            <strong>{{name}}</strong>
            <p>Type: {{type}}</p>
        </li>
        {{/each}}
    </ul>
    {{/if}}

    <h5>Guide</h5>
    <p>Name: {{details.guide.name}}</p>
    <p>Language: {{details.guide.language}}</p>
    <p>Rating: {{details.guide.rating}}</p>

    {{/each}}
</div>