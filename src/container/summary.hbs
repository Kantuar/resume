{{!--
Це код container файлу для summary сторінки,
в якому міститься код, котрий буде віддаватися по шляху (PATH) - "/summary"
--}}

<div>
    {{#with main}}
    <main>
        <div class="row">
            <div class="col-6">
                <div class="mb-3">
                    <div>
                        {{> title data=summary.title big=false}}
                    </div>
                    <div>
                        <p>
                            {{summary.text}}
                        </p>
                    </div>
                </div>
            </div>
            <div class="col-6">
                {{#with experience}}
                <div>
                    {{>title data=title big=false}}
                    <div>
                        <p>
                            {{text}}
                        </p>
                    </div>
                </div>
                {{/with}}
            </div>
        </div>
    </main>
    {{/with}}
</div>

