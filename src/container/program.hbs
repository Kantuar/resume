<div>
    {{#with program}}
    {{#with excursion}}
    <div>
        <h1>{{name}}</h1>
        {{#with location}}
        <p>Локація: {{city}}, {{country}}</p>
        <p>Дата: {{../date}}</p>
        {{/with}}
    </div>
    <div>
        {{#each program}}
        <hr>
        <h2>{{name}}</h2>
        <p>Тип: {{type}}</p>
        <p>Тривалість: {{duration}} години</p>
    </div>
    <div>
        {{#with details}}
        {{#with museum}}
        <h3>Інформація про музей:</h3>
        <p>Назва: {{name}}</p>
        {{#with location}}
        <p>Локація: {{address}}, {{city}},{{country}}</p>
        {{/with}}
    </div>
    <div>
        <h3>Експонати:</h3>
        <ul>
            {{#each exhibits}}
            <li>
                Назва: <strong>{{name}}</strong>

                <p>Художник:
                    {{#if artist}}
                    {{artist}}
                    {{else}}
                    невідомий</p>
                {{/if}}

                <p>Опис: {{description}}</p>

                <p>Аудіо-гід:
                    {{#if audio_guide}} присутній
                    {{else}} відсутній
                    {{/if}}</p>
            </li>
            {{/each}}
        </ul>
        {{/with}}
        {{/with}}
    </div>
    <div>
        {{#with details}}
        {{#with venue}}
        <h3>Деталі:</h3>
        <p>Місце проведення: {{name}}</p>
        {{#with location}}
        <p>Локація: {{address}}, {{city}},{{country}}
            {{/with}}</p>
        {{/with}}
    </div>
    <div>
        <h3>Виконавці:</h3>
        <ul>
            {{#each performers}}
            <li>
                <p>Ім'я: <strong>{{name}}</strong></p>
                <p>Тип: {{type}}</p>
            </li>
            {{/each}}
        </ul>
    </div>
    <div>
        <h3>Гід:</h3>
        {{#with guide}}
        <p>Ім'я: {{name}}</p>
        <p>Мова: {{language}}</p>
        <p>Рейтинг: {{rating}}</p>
        {{/with}}
        {{/with}}
        {{/each}}
    </div>
    {{/with}}
    {{/with}}
</div>