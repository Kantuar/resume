<main>

    <div>
        <h1 class="pt-5 pb-2">{{header}}</h1>

        {{#with purchase}}

        <div class="nav nav-tabs">
            {{#each tabs}}
            <div class="nav-item">
                <a class="nav-link">
                    {{this}}</a>
            </div>
            {{/each}}
        </div>
        {{#with actionBlock}}
        <div class="row">
            <div class="col-4 pt-3">
                {{#with input}}
                <input type="text" placeholder="{{placeholder}}" class="form-control">
                {{/with}}
            </div>
            <div class="col-8 ps-0 pt-3">
                {{#each buttons}}
                <a href="{{link}}" class="btn 
                            {{#if isSuccess}}  btn-success  {{/if}}
                            {{#if isOutline}}  btn-outline-success {{/if}}
                            {{#if isDanger}} btn-outline-danger{{/if}}">{{text}}
                </a>
                {{/each}}
            </div>
        </div>
        {{/with}}
        <div>
            <hr>
        </div>

        {{> purchaseItem}}

    </div>
    {{/with}}
    <div>
        <hr>
    </div>
    <div>
        {{#with userInfo}}
        <h3 class="py-4">{{title}}</h3>

        <div class="card mb-2">
            {{#with profileData}}

            <h5 class="p-3">{{title}}</h5>

            <div class="card-body pt-0 pb-2">
                <div class="card ">
                    <div class="row">
                        {{#with fullName}}
                        <div class="col-4">
                            {{#with surname}}
                            <div class="pt-2 ps-2">{{title}}</div>
                            <div class="pb-2 ps-2"><b>{{value}}</b></div>
                            {{/with}}
                        </div>
                        <div class="col-4">
                            {{#with name}}
                            <div class="pt-2">{{title}}</div>
                            <div><b>{{value}}</b></div>
                            {{/with}}
                        </div>
                        <div class="col-4">
                            {{#with middleName}}
                            <div class="pt-2">{{title}}</div>
                            <div class="pb-2"><b>{{value}}</b></div>
                            {{/with}}
                        </div>
                        {{/with}}
                    </div>
                </div>
                <div class="card mt-3">
                    <div class="row">
                        {{#with otherInfo}}
                        <div class="col-4">
                            {{#with birthday}}
                            <div class="pt-2 ps-2">{{title}}</div>
                            <div class="pb-2 ps-2"><b>{{value}}</b></div>
                            {{/with}}
                        </div>
                        <div class="col-4">
                            {{#with sex}}
                            <div class="pt-2">{{title}}</div>
                            <div class="pb-2"><b>{{value}}</b></div>
                            {{/with}}
                        </div>
                        <div class="col-4">
                            {{#with language}}
                            <div class="pt-2">{{title}}</div>
                            <div class="pb-2"><b>{{value}}</b></div>
                            {{/with}}
                        </div>
                        {{/with}}
                    </div>
                </div>
                {{/with}}
                <div class="card mt-3 ps-2 py-1">
                    <div class="row">
                        {{#each buttons}}
                        <div class="col-4">
                            <a href="{{link}}" class="btn m-1 ms-0
                                   {{#if isPrimary}}  btn-primary {{/if}}
                                   {{#if isSecondary}}  btn-outline-secondary {{/if}}
                                   {{#if isDanger}}  btn-outline-danger {{/if}}">
                                {{text}}</a>
                        </div>
                        {{/each}}
                    </div>
                </div>
            </div>
        </div>
        <div class="card mb-2 ps-3">
            {{#with recipients}}
            <h5 class="ps-1 py-3">{{title}}</h5>

            <div class="row">
                {{#each users}}
                <div class="col-4 ps-2 pb-2 pe-0">
                    <div class="card">
                        <div class="ps-2"><b>{{name}}</b></div>
                        <div class="ps-2">{{phone}}</div>
                        {{#with button}}
                        <div class="p-2">
                            <span><a href="{{link}}" class="btn btn-primary">{{text}}</a></span>
                        </div>
                        {{/with}}
                    </div>
                </div>
                {{/each}}
            </div>
            {{/with}}
        </div>
        <div class="card ps-4 pe-4 pb-2">
            {{#with contacts}}
            <h5 class="ps-1 py-3">{{title}}</h5>

            <div class="row ">
                {{#each contactData}}

                <div class="col-4 px-1">
                    <div class="card">
                        <div class="ps-2 pt-1">{{title}}</div>
                        <div class="ps-2 pt-2"><b>{{value}}</b></div>
                        {{#with button}}
                        <span><a href="{{link}}" class="btn m-2 
                            {{#if isPrimary}}  btn-primary {{/if}}
                            {{#if isSecondary}}  btn-outline-secondary {{/if}}
                            {{#if isDanger}}  btn-outline-danger {{/if}}">
                                {{text}}</a></span>
                        {{/with}}
                    </div>
                </div>
                {{/each}}
            </div>
            {{/with}}
        </div>
        {{/with}}
    </div>
    <div class="pt-5">
        <hr>
    </div>

</main>