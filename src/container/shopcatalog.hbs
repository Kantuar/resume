<main>
    {{> breadcrump}}
    <div>
        <h2>{{header}}</h2>

        <div class="row">
            {{#each sortBlock}}
            <div class="col-3 pt-3 pb-5 px-1">
                <select class="form-select form-select-sm ">
                    <option selected>{{placeholder}}</option>
                    {{#each options}}
                    <option value="{{value}}">{{text}}</option>
                    {{/each}}
                </select>
            </div>
            {{/each}}
        </div>
    </div>
    <div class="row">
        {{#with filterBlock}}
        <div class="col-4 px-0 pe-1 pb-3">
            <div class="card">
                <div class="card-body">
                    {{#with sellers}}
                    <div class="form-label">{{title}}</div>
                    {{#each list}}
                    <div class="form-check">
                        <label class="form-check-label">{{value}}</label>
                        <input type="checkbox" class="form-check-input">
                    </div>
                    {{/each}}
                    {{/with}}

                    <hr>

                    {{#with brands}}
                    <label class="form-label">{{title}}</label>
                    {{#with input}}
                    <input placeholder="{{placeholder}}" class="form-control form-control-sm mb-3">
                    {{/with}}
                    {{#each options}}
                    <div class="form-check">
                        <label class="form-check-label">{{value}}</label>
                        <input type="checkbox" class="form-check-input">
                    </div>
                    {{/each}}
                    {{/with}}

                    <hr>

                    {{#with price}}
                    <label class="form-label">{{title}}</label>
                    {{#with range}}

                    <input placeholder="{{from}}" class="form-control form-control-sm mb-3">
                    <input placeholder="{{to}}" class="form-control form-control-sm mb-3">

                    {{/with}}
                    {{#with button}}
                    <span><a href="{{link}}" class="btn btn-outline-secondary">{{text}}</a></span>
                    {{/with}}
                    {{/with}}

                    <hr>

                    {{#each filterList}}
                    <label class="form-label">{{title}}</label>
                    {{#each options}}
                    <div class="form-check py-1">
                        <label class="form-check-label">{{value}}</label>
                        <input type="checkbox" class="form-check-input">
                    </div>
                    {{/each}}
                    <hr>
                    {{/each}}

                </div>
            </div>
        </div>
        {{/with}}

        {{> catalogItem}}

        {{> shopaction}}

        <div class="pt-4">
            <hr>
        </div>
</main>